import java.util.*;

public class UnionIntersectionSets {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input Set1
        System.out.print("Enter elements of Set1 separated by spaces: ");
        Set<Integer> set1 = new HashSet<>();
        for (String s : scanner.nextLine().split(" ")) {
            set1.add(Integer.parseInt(s));
        }

        // Input Set2
        System.out.print("Enter elements of Set2 separated by spaces: ");
        Set<Integer> set2 = new HashSet<>();
        for (String s : scanner.nextLine().split(" ")) {
            set2.add(Integer.parseInt(s));
        }

        // Union
        Set<Integer> union = new HashSet<>(set1);
        union.addAll(set2);

        // Intersection
        Set<Integer> intersection = new HashSet<>(set1);
        intersection.retainAll(set2);

        System.out.println("Union: " + union);
        System.out.println("Intersection: " + intersection);
    }
}